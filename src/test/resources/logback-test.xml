<configuration scan="true" scanPeriod="5 seconds">
  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%t] %p %F:%L - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Root Logger -->
  <root level="info">
    <appender-ref ref="console"/>
  </root>

</configuration>
